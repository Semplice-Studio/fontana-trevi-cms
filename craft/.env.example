# Craft CMS Environment Variables
# Copy this file to .env and customize

# ===========================================
# ENVIRONMENT
# ===========================================
CRAFT_ENVIRONMENT=dev
CRAFT_DEV_MODE=true
CRAFT_ALLOW_ADMIN_CHANGES=true
CRAFT_ALLOW_UPDATES=true
CRAFT_DISALLOW_ROBOTS=true

# ===========================================
# SECURITY
# ===========================================
# Generate with: php -r "echo bin2hex(random_bytes(32));"
CRAFT_SECURITY_KEY=

# ===========================================
# DATABASE
# ===========================================
DB_DRIVER=mysql
DB_SERVER=db
DB_PORT=3306
DB_DATABASE=craft
DB_USER=craft
DB_PASSWORD=craft

# ===========================================
# URLs
# ===========================================
PRIMARY_SITE_URL=http://localhost:8080
CP_TRIGGER=admin
NUXT_FRONTEND_URL=http://localhost:8080


# ===========================================
# GRAPHQL
# ===========================================
# Comma-separated list of allowed origins
GRAPHQL_ALLOWED_ORIGINS=http://localhost:3000
