{
    "name": "semplice/fontana-trevi-cms",
    "description": "Headless Craft CMS for Fontana Trevi",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^8.2",
        "craftcms/cms": "^5.0",
        "craftcms/ckeditor": "^4.0",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "craftcms/generator": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "modules\\": "modules/"
        }
    },
    "config": {
        "allow-plugins": {
            "craftcms/plugin-installer": true,
            "yiisoft/yii2-composer": true
        },
        "optimize-autoloader": true,
        "platform": {
            "php": "8.2"
        },
        "sort-packages": true
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
