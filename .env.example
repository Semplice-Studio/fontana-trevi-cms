# Docker settings
APP_PORT=8080
DB_PORT=3306

# Database
DB_DRIVER=mysql
DB_SERVER=db
DB_DATABASE=craft
DB_USER=craft
DB_PASSWORD=craft
DB_ROOT_PASSWORD=root
DB_TABLE_PREFIX=

# Craft CMS
CRAFT_APP_ID=fontana-trevi-cms
CRAFT_ENVIRONMENT=dev
CRAFT_SECURITY_KEY=
CRAFT_DEV_MODE=true
CRAFT_ALLOW_ADMIN_CHANGES=true
CRAFT_ALLOW_UPDATES=true
CRAFT_DISALLOW_ROBOTS=true

# URLs
PRIMARY_SITE_URL=http://localhost:8080
CP_TRIGGER=admin

# GraphQL CORS (comma-separated origins, or * for all)
GRAPHQL_ALLOWED_ORIGINS=http://localhost:3000
