# Docker Compose Environment Variables
# Copy this file to .env and customize

# ===========================================
# PORTS
# ===========================================
APP_PORT=8080
DB_PORT=3306

# ===========================================
# DATABASE
# ===========================================
DB_DATABASE=craft
DB_USER=craft
DB_PASSWORD=craft
DB_ROOT_PASSWORD=root

# ===========================================
# CRAFT CMS
# ===========================================
PRIMARY_SITE_URL=http://localhost:8080
CRAFT_DEV_MODE=true
CRAFT_ALLOW_ADMIN_CHANGES=true

# CORS - Comma-separated list of allowed origins for GraphQL
GRAPHQL_ALLOWED_ORIGINS=http://localhost:3000
